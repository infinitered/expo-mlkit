{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "build/**"
      ],
      "cache": true
    },
    "clean": {},
    "lint": {
      "dependsOn": [
        "^lint",
        "^typecheck",
        "typecheck"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": [
        "^build",
        "^lint"
      ],
      "cache": false
    },
    "typecheck": {
      "dependsOn": [
        "^typecheck"
      ]
    }
  }
}
